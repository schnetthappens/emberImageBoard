<div class="create-image">
  {{link-to '+' 'posts.create'}}
</div>

<ul class="posts-list">
  {{#each model as |post|}}
    <li class="post">
      {{#link-to 'posts.show' post}}
        <img class="post-image" src="{{post.url}}" alt="" />
      {{/link-to}}
      <div class="caption-container">
        <p class="post-caption">{{post.caption}}</p>
      </div>
    </li>
  {{/each}}

</ul>
